<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.check.mapper.CheckMapper">

    <!-- 목록 -->
    <select id="list" resultType="Checks">
        SELECT *
        FROM checks
    </select>

    <!-- 조회 -->
    <select id="select" resultType="Checks">
        SELECT *
        FROM checks
        WHERE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO checks ( name, attendance_date, status )
        VALUES ( #{name}, #{attendanceDate}, #{status} )
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE checks
           SET 
              , name = #{name}
              , attendance_date = #{attendanceDate}
              , status = #{status}
              ,updated_at = now()
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM checks
        WHERE id = #{id}
    </delete>

</mapper>